syntax = "proto3";

package biblioteca;

service BibliotecaService {
  rpc SolicitarLibro (SolicitudLibroRequest) returns (RespuestaOperacion);
  rpc RenovarLibro (RenovacionRequest) returns (RespuestaOperacion);
  rpc DevolverLibro (DevolucionRequest) returns (RespuestaOperacion);
}

message SolicitudLibroRequest {
  string usuario = 1;
  string libro = 2;
}

message RenovacionRequest {
  string usuario = 1;
  string libro = 2;
  int32 numeroRenovacion = 3;
}

message DevolucionRequest {
  string usuario = 1;
  string libro = 2;
}

message RespuestaOperacion {
  string mensaje = 1;
  bool exito = 2;
}
